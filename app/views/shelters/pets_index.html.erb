<h1>Available Pets</h1>
<h2><%= @shelter.name %></h2>

<%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new" %>

<% @pets.each do |pet| %>
  <% if pet.shelter_id == @shelter.id %>
    <%= image_tag(pet.image, alt: "pet photo", method: :get) %>
    <h3>Name: <%= pet.name %></h3>
    <p>Approximate Age: <%= pet.approximate_age %></p>
    <p>Sex: <%= pet.sex %></p>
  <% else %>
  <% end %>
<% end %>
