<h1>Update Pet Information</h1>

<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
  <%= label_tag :image %><br>
  <%= text_field_tag :image, @pet.image %><br><br>
  <%= label_tag :name %><br>
  <%= text_field_tag :name, @pet.name %><br><br>
  <%= label_tag :description %><br>
  <%= text_field_tag :description, @pet.description %><br><br>
  <%= label_tag :approximate_age %><br>
  <%= text_field_tag :approximate_age, @pet.approximate_age %><br><br>
  <%= label_tag :sex %><br>
  <%= text_field_tag :sex, @pet.sex %><br><br>

  <%= submit_tag 'Save' %>
<% end %>
